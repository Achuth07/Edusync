@model IEnumerable<Edusync.Data.Attendance>

@{
    ViewData["Title"] = "View Only Attendance";
}

<h1>View Attendance</h1>
<h3>Filter your attendance using search or sort functionalities</h3>

<table class="table table-bordered" id="viewOnlyattendancesTable">
    <thead>
        <tr>
            <th>Student</th>
            <th>Class</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(item.Student != null ? $"{item.Student.FirstName} {item.Student.LastName}" : "No Student")</td>
            <td>@(item.Class != null && item.Class.Course != null ? item.Class.Course.Name : "No Class")</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Status</td>
        </tr>
    }
    </tbody>
</table> 

@section Scripts{
    <script>
        $(function(){
            $('#viewOnlyattendancesTable').DataTable();
        })
    </script>
}
